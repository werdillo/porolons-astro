---
import Navbar from "../../components/Navbar.astro";
import Advances from "../../components/Advances.astro";
import Production from "../../components/Production.astro";
import AccordionSection from "../../components/AccordionSection.astro";
import Hero from "../../components/Hero.astro";
import Location from "../../components/Location.astro";
import Layout from "../../layouts/Layout.astro";

import "../../main.css";

const { lang } = Astro.params;

export function getStaticPaths() {
    return [{ params: { lang: "en" } }, { params: { lang: "ru" } }];
}
---

<Layout lang={lang}>
    <Navbar lang={lang} />
    <Hero lang={lang} />
    <Advances lang={lang} />
    <Production lang={lang} />
    <AccordionSection lang={lang} />
    <Location lang={lang} />
</Layout>
