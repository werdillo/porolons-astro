---
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Advances1 from "../assets/images/advances/Advances1.svg";
import Advances2 from "../assets/images/advances/Advances2.svg";
import Advances3 from "../assets/images/advances/Advances3.svg";
import Advances4 from "../assets/images/advances/Advances4.svg";

const title = {
    lv: "Uzticieties profesionāļiem",
    ru: "Доверьтесь профессионалам",
    en: "Trust the professionals",
};
const contentItems = [
    {
        imgSrc: Advances1,
        text_lv: "Vienīgais Vita pārstāvis Latvijā un Igaunijā",
        text_ru: "Единственный представитель Vita в Латвии и Эстонии",
        text_en: "The only Vita representative in Latvia and Estonia",
    },
    {
        imgSrc: Advances2,
        text_lv: "Pārstrādājam 120 tonnas porolona mēnesī",
        text_ru: "Перерабатываем 120 тон поролона ежемесячно",
        text_en: "Monthly we process 120 tons of foam rubber",
    },
    {
        imgSrc: Advances3,
        text_lv: "Produkcija atbilst OEKO-TEX sertifikāta prasībām",
        text_ru: "Продукция соответствует сертификации OEKO-TEX",
        text_en: "Products comply with OEKO-TEX certification",
    },
    {
        imgSrc: Advances4,
        text_lv: "Vairāk nekā 25 gadu pieredze",
        text_ru: "Более 25 лет опыта",
        text_en: "More than 25 years of experience",
    },
];
---

<section id="content">
    <div class="container">
        <h1>{title[lang]}</h1>
        <div class="advantages-grid">
            {
                contentItems.map((item) => (
                    <div class="advantage-item">
                        <Image src={item.imgSrc} alt="icon" />
                        <p>{item["text_" + lang]}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    #content {
        padding: 100px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    h1 {
        font-size: 40px;
        color: #565656;
        font-family: "Ubuntu", sans-serif;
        line-height: 57px;
        font-weight: 500;
        margin-bottom: 80px;
        text-align: center;
    }

    .advantages-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 50px;
    }

    .advantage-item {
        text-align: center;
    }

    .advantage-item img {
        width: 70px;
        height: 70px;
        margin-bottom: 20px;
    }

    .advantage-item p {
        font-size: 16px;
        line-height: 26px;
        color: #6f6f6f;
        letter-spacing: 0.002em;
        font-family: "Open Sans", sans-serif;
        margin: 0;
    }

    @media only screen and (max-width: 770px) {
        #content {
            padding: 50px 20px;
        }

        h1 {
            font-size: 28px;
            line-height: 36px;
            margin-bottom: 40px;
        }

        .advantages-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 30px;
        }
    }

    @media only screen and (max-width: 479px) {
        h1 {
            font-size: 24px;
            line-height: 32px;
            margin-bottom: 30px;
        }

        .advantages-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .advantage-item {
            display: flex;
            align-items: center;
            text-align: left;
            gap: 15px;
        }

        .advantage-item img {
            width: 50px;
            height: 50px;
            margin-bottom: 0;
            flex-shrink: 0;
        }

        .advantage-item p {
            font-size: 14px;
            line-height: 20px;
        }
    }
</style>
