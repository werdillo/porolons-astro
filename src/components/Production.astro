---
import { productionData } from "../data/production";
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Production1 from "../assets/images/production/Production1.png";
import Production2 from "../assets/images/production/Production2.png";
import Production3 from "../assets/images/production/Production3.png";
import Production4 from "../assets/images/production/Production4.png";
import Production5 from "../assets/images/production/Production5.png";
import Production6 from "../assets/images/production/Production6.png";
import Production7 from "../assets/images/production/Production7.png";
import Production8 from "../assets/images/production/Production8.png";
import Production9 from "../assets/images/production/Production9.png";
import Production10 from "../assets/images/production/Production10.png";
import Production11 from "../assets/images/production/Production11.png";
import Production12 from "../assets/images/production/Production12.png";

const images = [
    Production1,
    Production2,
    Production3,
    Production4,
    Production5,
    Production6,
    Production7,
    Production8,
    Production9,
    Production10,
    Production11,
    Production12,
];
---

<section
    id="photos"
    class="bg-(--bg-secondary) py-10 sm:py-[50px] md:py-[100px]"
>
    <div class="container max-w-[1200px] mx-auto px-5">
        <h1
            class="text-[25px] sm:text-[30px] md:text-[40px] text-(--main-accent) leading-[1.3] md:leading-none font-medium mb-[30px] sm:mb-10 md:mb-20 text-center"
        >
            {productionData.title[lang]}
        </h1>
        <div
            class="grid grid-cols-2 md:grid-cols-4 gap-x-[15px] gap-y-[30px] sm:gap-x-5 sm:gap-y-10 md:gap-x-[30px] md:gap-y-[60px] w-full"
        >
            {
                productionData.items.map((item, index) => (
                    <div class="text-center min-w-0 overflow-hidden">
                        <Image
                            src={images[index]}
                            alt={item["text_" + lang]}
                            class="w-full max-w-full h-auto mb-4 block object-contain"
                        />
                        <p class="text-[13px] sm:text-base md:text-xl font-medium leading-normal sm:leading-[22px] md:leading-[1.3] tracking-[0.005em] text-(--text-primary) m-0">
                            {item["text_" + lang]}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
