---
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Production1 from "../assets/images/production/Production1.png";
import Production2 from "../assets/images/production/Production2.png";
import Production3 from "../assets/images/production/Production3.png";
import Production4 from "../assets/images/production/Production4.png";
import Production5 from "../assets/images/production/Production5.png";
import Production6 from "../assets/images/production/Production6.png";
import Production7 from "../assets/images/production/Production7.png";
import Production8 from "../assets/images/production/Production8.png";
import Production9 from "../assets/images/production/Production9.png";
import Production10 from "../assets/images/production/Production10.png";
import Production11 from "../assets/images/production/Production11.png";
import Production12 from "../assets/images/production/Production12.png";

const title = {
    lv: "Izstrādājumi no porolona dažādām nozarēm:",
    ru: "Доверьтесь профессионалам:",
    en: "Trust the professionals:",
};

const photoItems = [
    {
        imgSrc: Production1,
        text_lv: "Mēbeles",
        text_ru: "Мебель",
        text_en: "Furniture",
    },
    {
        imgSrc: Production2,
        text_lv: "Matrači un matraču pārvalki",
        text_ru: "Матрасы и наматрасники",
        text_en: "Mattresses and mattress pads",
    },
    {
        imgSrc: Production3,
        text_lv: "Spilveni",
        text_ru: "Подушки",
        text_en: "Pillows",
    },
    {
        imgSrc: Production4,
        text_lv: "Preces mājai",
        text_ru: "Товары домашнего обихода",
        text_en: "Household goods",
    },
    {
        imgSrc: Production5,
        text_lv: "Apģērbs + Apavi",
        text_ru: "Одежда+ Обувь",
        text_en: "Clothing+ Footwear",
    },
    {
        imgSrc: Production6,
        text_lv: "Šūšanas rūpniecība",
        text_ru: "Швейная промышленность",
        text_en: "Garment industry",
    },
    {
        imgSrc: Production7,
        text_lv: "Ortopēdija",
        text_ru: "Ортопедия",
        text_en: "Orthopedics",
    },
    {
        imgSrc: Production8,
        text_lv: "Sports",
        text_ru: "Спорт",
        text_en: "Sport",
    },
    {
        imgSrc: Production9,
        text_lv: "Transporta līdzekļi",
        text_ru: "Транспортные средства",
        text_en: "Transport equipment",
    },
    {
        imgSrc: Production10,
        text_lv: "Celtniecība",
        text_ru: "Строительство",
        text_en: "Construction",
    },
    {
        imgSrc: Production11,
        text_lv: "Hermetizācija un skaņas izolācija",
        text_ru: "Герметизация и звукоизоляция",
        text_en: "Sealing and sound insulation",
    },
    {
        imgSrc: Production12,
        text_lv: "Iepakojumi",
        text_ru: "Упаковки",
        text_en: "Packaging",
    },
];
---

<section id="photos">
    <div class="container">
        <h1>{title[lang]}</h1>
        <div class="production-grid">
            {
                photoItems.map((item) => (
                    <div class="production-item">
                        <Image src={item.imgSrc} alt={item["text_" + lang]} />
                        <p>{item["text_" + lang]}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    #photos {
        background: #f5f5f5;
        padding: 100px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    h1 {
        font-size: 40px;
        color: var(--main-accent);
        font-family: "Ubuntu", sans-serif;
        line-height: 40px;
        font-weight: 500;
        margin-bottom: 80px;
        text-align: center;
    }

    .production-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 60px 30px;
        width: 100%;
    }

    .production-item {
        text-align: center;
        min-width: 0;
        overflow: hidden;
    }

    .production-item img {
        width: 100%;
        max-width: 100%;
        height: auto;
        margin-bottom: 16px;
        display: block;
        object-fit: contain;
    }

    .production-item p {
        font-size: 20px;
        font-family: "Ubuntu", sans-serif;
        font-weight: 500;
        line-height: 26px;
        letter-spacing: 0.005em;
        color: #565656;
        margin: 0;
    }

    @media only screen and (max-width: 770px) {
        #photos {
            padding: 50px 0;
        }

        h1 {
            font-size: 28px;
            line-height: 36px;
            margin-bottom: 40px;
        }

        .production-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 40px 20px;
        }

        .production-item p {
            font-size: 16px;
            line-height: 22px;
        }
    }

    @media only screen and (max-width: 479px) {
        h1 {
            font-size: 25px;
            line-height: 32px;
            margin-bottom: 30px;
        }

        .production-grid {
            gap: 30px 15px;
        }

        .production-item p {
            font-size: 13px;
            line-height: 20px;
        }
    }
</style>
