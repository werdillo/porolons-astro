---
import { productionData } from "../data/production";
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Production1 from "../assets/images/production/Production1.png";
import Production2 from "../assets/images/production/Production2.png";
import Production3 from "../assets/images/production/Production3.png";
import Production4 from "../assets/images/production/Production4.png";
import Production5 from "../assets/images/production/Production5.png";
import Production6 from "../assets/images/production/Production6.png";
import Production7 from "../assets/images/production/Production7.png";
import Production8 from "../assets/images/production/Production8.png";
import Production9 from "../assets/images/production/Production9.png";
import Production10 from "../assets/images/production/Production10.png";
import Production11 from "../assets/images/production/Production11.png";
import Production12 from "../assets/images/production/Production12.png";

const images = [
    Production1,
    Production2,
    Production3,
    Production4,
    Production5,
    Production6,
    Production7,
    Production8,
    Production9,
    Production10,
    Production11,
    Production12,
];
---

<section id="photos">
    <div class="container">
        <h1>{productionData.title[lang]}</h1>
        <div class="production-grid">
            {
                productionData.items.map((item, index) => (
                    <div class="production-item">
                        <Image src={images[index]} alt={item["text_" + lang]} />
                        <p>{item["text_" + lang]}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    #photos {
        background: var(--bg-secondary);
        padding: var(--section-padding-desktop) 0;
    }

    h1 {
        font-size: var(--font-h1-desktop);
        color: var(--main-accent);
        font-family: var(--font-secondary);
        line-height: 1;
        font-weight: 500;
        margin-bottom: var(--heading-margin-desktop);
        text-align: center;
    }

    .production-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 60px 30px;
        width: 100%;
    }

    .production-item {
        text-align: center;
        min-width: 0;
        overflow: hidden;
    }

    .production-item img {
        width: 100%;
        max-width: 100%;
        height: auto;
        margin-bottom: 16px;
        display: block;
        object-fit: contain;
    }

    .production-item p {
        font-size: 20px;
        font-family: var(--font-secondary);
        font-weight: 500;
        line-height: 1.3;
        letter-spacing: 0.005em;
        color: var(--text-primary);
        margin: 0;
    }

    @media (max-width: 770px) {
        #photos {
            padding: var(--section-padding-tablet) 0;
        }

        h1 {
            font-size: var(--font-h1-tablet);
            line-height: 1.3;
            margin-bottom: var(--heading-margin-tablet);
        }

        .production-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 40px 20px;
        }

        .production-item p {
            font-size: 16px;
            line-height: 22px;
        }
    }

    @media (max-width: 479px) {
        h1 {
            font-size: var(--font-h1-mobile);
            line-height: 1.3;
            margin-bottom: var(--heading-margin-mobile);
        }

        .production-grid {
            gap: 30px 15px;
        }

        .production-item p {
            font-size: var(--font-small-mobile);
            line-height: 1.5;
        }
    }
</style>
