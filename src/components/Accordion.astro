---
import { accordionData } from "../data/accordion";
const { lang } = Astro.props;
import { Image } from "astro:assets";
import Accordion1 from "../assets/images/accordion/Accordion1.svg";
import Accordion2 from "../assets/images/accordion/Accordion2.svg";
import Accordion4 from "../assets/images/accordion/Accordion4.svg";
import Accordion6 from "../assets/images/accordion/Accordion6.svg";

const images = [Accordion1, Accordion2, Accordion4, Accordion6];
---

<section id="accordion-section">
    <div class="container">
        <div class="heading">
            <h1>{accordionData.title[lang]}</h1>
        </div>
        <div class="accordion" id="accordion">
            {
                accordionData.items.map((item, index) => (
                    <div class="accordion-item" data-index={index}>
                        <button
                            class="accordion-button"
                            type="button"
                            aria-expanded="false"
                            data-accordion-button
                        >
                            <div class="accordion-button-content">
                                <Image
                                    src={images[index]}
                                    alt=""
                                    width={55}
                                    height={55}
                                    class="accordion-icon"
                                />
                                <span class="accordion-title">
                                    {item["title_" + lang]}
                                </span>
                            </div>
                            <svg
                                class="accordion-arrow"
                                width="20"
                                height="20"
                                viewBox="0 0 20 20"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M5 7.5L10 12.5L15 7.5"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                />
                            </svg>
                        </button>
                        <div class="accordion-content" data-accordion-content>
                            <div class="accordion-body">
                                {item["body_" + lang]}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    /* Section */
    #accordion-section {
        padding: var(--section-padding-desktop) 0;
        background: var(--bg-primary);
    }

    /* Heading */
    .heading {
        text-align: center;
        margin-bottom: var(--heading-margin-desktop);
    }

    .heading h1 {
        font-size: var(--font-h1-desktop);
        color: var(--main-accent);
        font-family: var(--font-secondary);
        line-height: 45px;
        font-weight: 500;
        margin: 0;
    }

    /* Accordion */
    .accordion {
        max-width: 1100px;
        margin: 0 auto;
    }

    /* Accordion Item */
    .accordion-item {
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }

    .accordion-item:last-child {
        border-bottom: none;
    }

    /* Accordion Button */
    .accordion-button {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--bg-primary);
        border: none;
        padding: 20px 24px;
        cursor: pointer;
        transition: all var(--transition-normal);
        font-family: var(--font-secondary);
        text-align: left;
    }

    .accordion-button:hover {
        background: var(--hover-bg);
    }

    .accordion-button:focus {
        outline: none;
    }

    .accordion-button[aria-expanded="true"] {
        background: var(--bg-primary);
    }

    .accordion-button-content {
        display: flex;
        align-items: center;
        gap: 20px;
        flex: 1;
    }

    .accordion-icon {
        width: 55px;
        height: 55px;
        flex-shrink: 0;
    }

    .accordion-title {
        font-size: 26px;
        line-height: var(--line-height-normal);
        color: var(--text-tertiary);
        font-weight: 400;
    }

    .accordion-arrow {
        flex-shrink: 0;
        color: var(--text-tertiary);
        transition: transform var(--transition-normal);
    }

    .accordion-button[aria-expanded="true"] .accordion-arrow {
        transform: rotate(180deg);
    }

    /* Accordion Content */
    .accordion-content {
        overflow: hidden;
        max-height: 0;
        transition: max-height var(--transition-normal) ease-in-out;
        will-change: max-height;
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
    }

    .accordion-content.active {
        border-top: 1px solid var(--border-color);
        max-height: 2000px;
    }

    .accordion-body {
        padding: 24px;
        font-family: var(--font-primary);
        font-size: var(--font-body-desktop);
        line-height: var(--line-height-loose);
        color: var(--text-secondary);
    }

    /* Tablet: 768px - 991px */
    @media only screen and (max-width: 991px) {
        .accordion-title {
            font-size: 22px;
        }

        .accordion-icon {
            width: 45px;
            height: 45px;
        }

        .accordion-body {
            font-size: var(--font-body-tablet);
            line-height: 32px;
        }
    }

    /* Large Mobile: 480px - 770px */
    @media only screen and (max-width: 770px) {
        #accordion-section {
            padding: var(--section-padding-tablet) 0;
        }

        .heading {
            margin-bottom: var(--heading-margin-tablet);
        }

        .heading h1 {
            font-size: var(--font-h1-tablet);
            line-height: 36px;
        }

        .accordion-button {
            padding: 16px 20px;
        }

        .accordion-button-content {
            gap: 15px;
        }

        .accordion-title {
            font-size: var(--font-body-desktop);
            line-height: var(--line-height-tight);
        }

        .accordion-icon {
            width: 40px;
            height: 40px;
        }

        .accordion-arrow {
            width: 18px;
            height: 18px;
        }

        .accordion-body {
            padding: 20px;
            font-size: var(--font-body-mobile);
            line-height: 28px;
        }
    }

    /* Small Mobile: 320px - 479px */
    @media only screen and (max-width: 479px) {
        #accordion-section {
            padding: var(--section-padding-mobile) 0;
        }

        .heading {
            margin-bottom: var(--heading-margin-mobile);
        }

        .heading h1 {
            font-size: var(--font-h1-mobile);
            line-height: 32px;
        }

        .accordion-button {
            padding: 16px;
        }

        .accordion-button-content {
            gap: 12px;
        }

        .accordion-title {
            font-size: var(--font-body-tablet);
            line-height: var(--line-height-tight);
        }

        .accordion-icon {
            width: 35px;
            height: 35px;
        }

        .accordion-arrow {
            width: 16px;
            height: 16px;
        }

        .accordion-body {
            padding: 16px;
            font-size: var(--font-small-mobile);
            line-height: 24px;
        }
    }
</style>

<script>
    function initAccordion() {
        const accordionButtons = document.querySelectorAll(
            "[data-accordion-button]",
        );

        // Use passive event listeners for better iOS performance
        accordionButtons.forEach((button) => {
            button.addEventListener(
                "click",
                () => {
                    const accordionItem = button.closest(".accordion-item");
                    const accordionContent = accordionItem?.querySelector(
                        "[data-accordion-content]",
                    ) as HTMLElement;

                    if (!accordionContent) return;

                    const isExpanded =
                        button.getAttribute("aria-expanded") === "true";

                    // Use requestAnimationFrame for smoother animations on iOS
                    requestAnimationFrame(() => {
                        // Close all other accordion items
                        accordionButtons.forEach((otherButton) => {
                            if (otherButton !== button) {
                                const otherItem =
                                    otherButton.closest(".accordion-item");
                                const otherContent = otherItem?.querySelector(
                                    "[data-accordion-content]",
                                ) as HTMLElement;

                                if (otherContent) {
                                    otherButton.setAttribute(
                                        "aria-expanded",
                                        "false",
                                    );
                                    otherContent.classList.remove("active");
                                }
                            }
                        });

                        // Toggle current accordion item
                        if (isExpanded) {
                            button.setAttribute("aria-expanded", "false");
                            accordionContent.classList.remove("active");
                        } else {
                            button.setAttribute("aria-expanded", "true");
                            accordionContent.classList.add("active");
                        }
                    });
                },
                { passive: true },
            );
        });

        // Use ResizeObserver instead of resize event for better performance
        if (typeof ResizeObserver !== "undefined") {
            const resizeObserver = new ResizeObserver((entries) => {
                // Only recalculate if accordion is actually visible
                for (const entry of entries) {
                    if (entry.contentRect.width > 0) {
                        // Trigger reflow only when needed
                        requestAnimationFrame(() => {
                            // Heights are now managed by CSS max-height
                            // No manual recalculation needed
                        });
                    }
                }
            });

            const accordion = document.getElementById("accordion");
            if (accordion) {
                resizeObserver.observe(accordion);
            }
        }
    }

    // Initialize on DOM ready
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initAccordion);
    } else {
        initAccordion();
    }
</script>
