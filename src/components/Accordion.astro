---
import { accordionData } from "../data/accordion";
const { lang } = Astro.props;
import { Image } from "astro:assets";
import Accordion1 from "../assets/images/accordion/Accordion1.svg";
import Accordion2 from "../assets/images/accordion/Accordion2.svg";
import Accordion4 from "../assets/images/accordion/Accordion4.svg";
import Accordion6 from "../assets/images/accordion/Accordion6.svg";

const images = [Accordion1, Accordion2, Accordion4, Accordion6];
---

<section id="accordion-section">
    <div class="container">
        <div class="heading">
            <h1>{accordionData.title[lang]}</h1>
        </div>
        <div class="accordion" id="accordion">
            {
                accordionData.items.map((item, index) => (
                    <div class="accordion-item" data-index={index}>
                        <button
                            class="accordion-button"
                            type="button"
                            aria-expanded="false"
                            data-accordion-button
                        >
                            <div class="accordion-button-content">
                                <Image
                                    src={images[index]}
                                    alt=""
                                    width={55}
                                    height={55}
                                    class="accordion-icon"
                                />
                                <span class="accordion-title">
                                    {item["title_" + lang]}
                                </span>
                            </div>
                            <svg
                                class="accordion-arrow"
                                width="20"
                                height="20"
                                viewBox="0 0 20 20"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M5 7.5L10 12.5L15 7.5"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                />
                            </svg>
                        </button>
                        <div class="accordion-content" data-accordion-content>
                            <div class="accordion-body">
                                {item["body_" + lang]}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    /* Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        width: 100%;
    }

    /* Section */
    #accordion-section {
        padding: 100px 0;
        background: #fff;
    }

    /* Heading */
    .heading {
        text-align: center;
        margin-bottom: 80px;
    }

    .heading h1 {
        font-size: 40px;
        color: var(--main-accent);
        font-family: "Ubuntu", sans-serif;
        line-height: 45px;
        font-weight: 500;
        margin: 0;
    }

    /* Accordion */
    .accordion {
        max-width: 1100px;
        margin: 0 auto;
    }

    /* Accordion Item */
    .accordion-item {
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }

    .accordion-item:last-child {
        border-bottom: none;
    }

    /* Accordion Button */
    .accordion-button {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #ffffff;
        border: none;
        padding: 20px 24px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: "Ubuntu", sans-serif;
        text-align: left;
    }

    .accordion-button:hover {
        background: #f8f9fa;
    }

    .accordion-button:focus {
        outline: none;
    }

    .accordion-button[aria-expanded="true"] {
        background: #ffffff;
    }

    .accordion-button-content {
        display: flex;
        align-items: center;
        gap: 20px;
        flex: 1;
    }

    .accordion-icon {
        width: 55px;
        height: 55px;
        flex-shrink: 0;
    }

    .accordion-title {
        font-size: 26px;
        line-height: 1.4;
        color: #5c5c5c;
        font-weight: 400;
    }

    .accordion-arrow {
        flex-shrink: 0;
        color: #5c5c5c;
        transition: transform 0.3s ease;
    }

    .accordion-button[aria-expanded="true"] .accordion-arrow {
        transform: rotate(180deg);
    }

    /* Accordion Content */
    .accordion-content {
        overflow: hidden;
        transition: height 0.3s ease;
        height: 0;
    }

    .accordion-content.active {
        border-top: 1px solid rgba(0, 0, 0, 0.125);
    }

    .accordion-body {
        padding: 24px;
        font-family: "Open Sans", sans-serif;
        font-size: 18px;
        line-height: 36px;
        color: #6f6f6f;
    }

    /* Tablet: 768px - 991px */
    @media only screen and (max-width: 991px) {
        .container {
            padding: 0 20px;
        }

        .accordion-title {
            font-size: 22px;
        }

        .accordion-icon {
            width: 45px;
            height: 45px;
        }

        .accordion-body {
            font-size: 16px;
            line-height: 32px;
        }
    }

    /* Large Mobile: 480px - 770px */
    @media only screen and (max-width: 770px) {
        #accordion-section {
            padding: 50px 0;
        }

        .heading {
            margin-bottom: 40px;
        }

        .heading h1 {
            font-size: 30px;
            line-height: 36px;
        }

        .accordion-button {
            padding: 16px 20px;
        }

        .accordion-button-content {
            gap: 15px;
        }

        .accordion-title {
            font-size: 18px;
            line-height: 1.3;
        }

        .accordion-icon {
            width: 40px;
            height: 40px;
        }

        .accordion-arrow {
            width: 18px;
            height: 18px;
        }

        .accordion-body {
            padding: 20px;
            font-size: 14px;
            line-height: 28px;
        }
    }

    /* Small Mobile: 320px - 479px */
    @media only screen and (max-width: 479px) {
        #accordion-section {
            padding: 40px 0;
        }

        .container {
            padding: 0 15px;
        }

        .heading {
            margin-bottom: 30px;
        }

        .heading h1 {
            font-size: 25px;
            line-height: 32px;
        }

        .accordion-button {
            padding: 16px;
        }

        .accordion-button-content {
            gap: 12px;
        }

        .accordion-title {
            font-size: 16px;
            line-height: 1.3;
        }

        .accordion-icon {
            width: 35px;
            height: 35px;
        }

        .accordion-arrow {
            width: 16px;
            height: 16px;
        }

        .accordion-body {
            padding: 16px;
            font-size: 13px;
            line-height: 24px;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const accordionButtons = document.querySelectorAll(
            "[data-accordion-button]",
        );

        accordionButtons.forEach((button) => {
            button.addEventListener("click", () => {
                const accordionItem = button.closest(".accordion-item");
                const accordionContent = accordionItem?.querySelector(
                    "[data-accordion-content]",
                ) as HTMLElement;

                if (!accordionContent) return;

                const isExpanded =
                    button.getAttribute("aria-expanded") === "true";

                // Close all other accordion items
                accordionButtons.forEach((otherButton) => {
                    if (otherButton !== button) {
                        const otherItem =
                            otherButton.closest(".accordion-item");
                        const otherContent = otherItem?.querySelector(
                            "[data-accordion-content]",
                        ) as HTMLElement;

                        if (otherContent) {
                            otherButton.setAttribute("aria-expanded", "false");
                            otherContent.style.height = "0px";
                            otherContent.classList.remove("active");
                        }
                    }
                });

                // Toggle current accordion item
                if (isExpanded) {
                    button.setAttribute("aria-expanded", "false");
                    accordionContent.style.height = "0px";
                    accordionContent.classList.remove("active");
                } else {
                    button.setAttribute("aria-expanded", "true");
                    accordionContent.classList.add("active");
                    const height = accordionContent.scrollHeight;
                    accordionContent.style.height = `${height}px`;
                }
            });
        });

        // Recalculate heights on window resize
        let resizeTimer: number;
        window.addEventListener("resize", () => {
            clearTimeout(resizeTimer);
            resizeTimer = window.setTimeout(() => {
                accordionButtons.forEach((button) => {
                    const isExpanded =
                        button.getAttribute("aria-expanded") === "true";
                    if (isExpanded) {
                        const accordionItem = button.closest(".accordion-item");
                        const accordionContent = accordionItem?.querySelector(
                            "[data-accordion-content]",
                        ) as HTMLElement;

                        if (accordionContent) {
                            const height = accordionContent.scrollHeight;
                            accordionContent.style.height = `${height}px`;
                        }
                    }
                });
            }, 250);
        });
    });
</script>
