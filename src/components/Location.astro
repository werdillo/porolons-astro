---
import { locationData } from "../data/location";
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Map from "../assets/images/map.png";
import Union from "../assets/images/union.svg";
---

<!-- Location -->
<section id="location">
    <div class="container">
        <div class="location-grid">
            <div class="text-area">
                <h3>{locationData.title[lang]}</h3>
                <div class="email">
                    <p>
                        <i class="fa fa-envelope"></i>
                        <a
                            href={`mailto:${locationData.contact.email}`}
                            class="contact-link">{locationData.contact.email}</a
                        >
                    </p>
                    <p>
                        <i class="fa fa-phone"></i>
                        <a
                            href={`tel:+371${locationData.contact.phone1}`}
                            class="contact-link"
                            >{locationData.contact.phone1}</a
                        >,
                        <a
                            href={`tel:+371${locationData.contact.phone2}`}
                            class="contact-link"
                            >{locationData.contact.phone2}</a
                        >
                    </p>
                </div>
                <div class="loc">
                    <i class="fa fa-map-marker-alt"></i>
                    <p>
                        <a
                            href={`https://maps.google.com/?q=${locationData.contact.address}`}
                            target="_blank"
                            class="contact-link"
                        >
                            {locationData.contact.address}
                        </a>
                    </p>
                </div>
                <div class="time">
                    <p>{locationData.workingHours["weekday_" + lang]}</p>
                    <p>{locationData.workingHours["break_" + lang]}</p>
                    <p>{locationData.workingHours["weekend_" + lang]}</p>
                </div>
            </div>

            <div class="map-container">
                <div class="map">
                    <iframe
                        src={locationData.mapUrl}
                        width="500"
                        height="400"
                        frameborder="0"
                        style="border:0;"
                        allowfullscreen=""
                        aria-hidden="false"
                        tabindex="0"></iframe>
                </div>
            </div>

            <div class="img-wrapper">
                <Image src={Map} alt="Location map" />
            </div>

            <div class="points-container">
                <div class="points">
                    {
                        locationData.mapPoints[lang].map((point) => (
                            <p>{point}</p>
                        ))
                    }
                </div>
            </div>

            <div class="copyright">
                <a href="/map.png" target="_blank">
                    <h6>
                        <Image src={Union} alt="" />
                        {locationData.scheme[lang]}
                    </h6>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Contact Links */
    .contact-link {
        color: inherit;
        text-decoration: none;
        cursor: pointer;
        border-bottom: 1px dotted transparent;
        padding-bottom: 1px;
        transition: all var(--transition-normal);
    }

    .contact-link:hover {
        opacity: 0.8;
        border-bottom-color: currentColor;
    }

    /* LOCATION STYLES */
    #location {
        background-color: var(--bg-dark);
        padding: var(--section-padding-desktop) 0;
    }

    .location-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        align-items: start;
    }

    /* Text Area */
    .text-area h3 {
        font-weight: 500;
        font-size: var(--font-h1-desktop);
        line-height: 45px;
        letter-spacing: 0.02em;
        font-family: var(--font-secondary);
        color: #ffffff;
        margin-bottom: 50px;
    }

    .text-area p {
        font-family: var(--font-primary);
        font-style: normal;
        font-weight: normal;
        font-size: var(--font-body-desktop);
        line-height: var(--line-height-loose);
        letter-spacing: 0.002em;
        color: #ffffff;
        margin: 0;
    }

    .text-area .email {
        margin-bottom: 30px;
    }

    .text-area .loc {
        display: flex;
        align-items: flex-start;
        margin-bottom: 30px;
    }

    .text-area .loc .fa {
        margin-right: 14px;
        flex-shrink: 0;
    }

    .text-area .time {
        margin-left: 40px;
    }

    .text-area .fa {
        margin-right: 20px;
        color: #555;
    }

    /* Map Container */
    .map-container {
        width: 100%;
    }

    .map {
        display: flex;
        justify-content: center;
    }

    .map iframe {
        max-width: 100%;
        width: 500px;
        height: 400px;
    }

    /* Image Wrapper */
    .img-wrapper {
        width: 100%;
        overflow: hidden;
    }

    .img-wrapper img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        display: block;
    }

    /* Points */
    .points-container {
        display: flex;
        align-items: center;
    }

    .points {
        padding: 30px 0;
    }

    .points p {
        color: #ffffff;
        margin: 2px 0;
        font-family: var(--font-primary);
        font-size: var(--font-body-desktop);
        line-height: var(--line-height-loose);
    }

    /* Copyright */
    .copyright {
        grid-column: 1 / -1;
        margin-top: 30px;
    }

    .copyright a {
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: opacity var(--transition-normal);
    }

    .copyright a:hover {
        opacity: 0.8;
    }

    .copyright h6 {
        font-family: var(--font-primary);
        font-style: normal;
        font-weight: normal;
        font-size: var(--font-body-desktop);
        line-height: var(--line-height-loose);
        letter-spacing: 0.002em;
        color: #ffffff;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .copyright img {
        margin-right: 30px;
    }

    /* Tablet: 770px - 1024px */
    @media only screen and (max-width: 1024px) {
        .location-grid {
            gap: 40px 20px;
        }

        .map iframe {
            width: 100%;
            height: 300px;
        }

        .img-wrapper img {
            height: 300px;
        }
    }

    /* Large Mobile: 480px - 770px */
    @media only screen and (max-width: 770px) {
        #location {
            padding: var(--section-padding-tablet) 0;
        }

        .location-grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .map {
            justify-content: flex-start;
        }

        .text-area h3 {
            font-size: var(--font-h1-tablet);
            line-height: 45px;
            margin-bottom: 30px;
            text-align: center;
        }

        .text-area .email {
            margin-bottom: 15px;
        }

        .text-area p {
            font-size: var(--font-body-mobile);
            line-height: 28px;
        }

        .text-area .loc {
            margin-bottom: 15px;
        }

        .text-area .time {
            margin-left: 20px;
        }

        .map iframe {
            width: 100%;
            height: 250px;
        }

        .img-wrapper img {
            height: 250px;
        }

        .points {
            padding: 0;
        }

        .points p {
            font-size: var(--font-body-mobile);
            line-height: 28px;
        }

        .copyright {
            margin-top: 15px;
        }
    }

    /* Small Mobile: 320px - 479px */
    @media only screen and (max-width: 479px) {
        #location {
            padding: var(--section-padding-mobile) 0;
        }

        .location-grid {
            gap: 20px;
        }

        .text-area h3 {
            font-size: var(--font-h1-mobile);
            line-height: 32px;
            margin-bottom: 20px;
        }

        .text-area .email {
            margin-bottom: 10px;
        }

        .text-area p {
            font-size: 12px;
            line-height: 23px;
            font-weight: 600;
        }

        .text-area .loc {
            margin-bottom: 10px;
        }

        .text-area .time {
            margin-left: 10px;
        }

        .text-area .fa {
            margin-right: 10px;
            font-size: 14px;
        }

        .map iframe {
            width: 100%;
            height: 200px;
        }

        .img-wrapper img {
            height: 200px;
        }

        .points p {
            font-size: 12px;
            line-height: 24px;
        }

        .copyright {
            display: none;
        }
    }
</style>
