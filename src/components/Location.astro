---
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Map from "../assets/images/map.png";
import Union from "../assets/images/union.svg";

const scheme = {
    lv: "Ielādēt braukšanas maršrutu",
    ru: "Скачать схему проезда",
    en: "Download the entrance scheme",
};
const title = {
    lv: "Ražotne",
    ru: "Производство",
    en: "Production of the goods",
};
const email = "order@eliza-k.lv";
const phone1 = "27862121";
const phone2 = "26653510";
const address = "Rīga, A. Deglava iela 52A, LV-1035";

const item = {
    weekday_ru: "Пн-Пт 8:30 - 16:00",
    break_ru: "Перерыв 12:00 - 13:00",
    weeken_ru: "Сб, Вскр - закрыто",
    weekday_lv: "Pirmd-Piekt 8:30 - 16:00",
    break_lv: "Pārtraukums 12:00 - 13:00",
    weeken_lv: "Sestd, Svētd - brīvdiena",
    weekday_en: "Mon-Fri 8:30 - 16:00",
    break_en: "Break 12:00 - 13:00",
    weeken_en: "Sat, Sun - closed",
};
---

<!-- Location -->
<section id="location">
    <div class="container">
        <div class="location-grid">
            <div class="text-area">
                <h3>{title[lang]}</h3>
                <div class="email">
                    <p>
                        <i class="fa fa-envelope"></i>
                        <a href={`mailto:${email}`} class="contact-link"
                            >{email}</a
                        >
                    </p>
                    <p>
                        <i class="fa fa-phone"></i>
                        <a href={`tel:+371${phone1}`} class="contact-link"
                            >{phone1}</a
                        >,
                        <a href={`tel:+371${phone2}`} class="contact-link"
                            >{phone2}</a
                        >
                    </p>
                </div>
                <div class="loc">
                    <i class="fa fa-map-marker-alt"></i>
                    <p>
                        <a
                            href={`https://maps.google.com/?q=${address}`}
                            target="_blank"
                            class="contact-link"
                        >
                            {address}
                        </a>
                    </p>
                </div>
                <div class="time">
                    <p>{item["weekday_" + lang]}</p>
                    <p>{item["break_" + lang]}</p>
                    <p>{item["weeken_" + lang]}</p>
                </div>
            </div>

            <div class="map-container">
                <div class="map">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d790.9258588960025!2d24.166916021392023!3d56.95046509910395!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46eecf1ae790db37%3A0x341a98d829cf03d0!2sEL%C4%AAZA-K%20porolona%20cehs!5e0!3m2!1sru!2slv!4v1667739898401!5m2!1sru!2slv"
                        width="500"
                        height="400"
                        frameborder="0"
                        style="border:0;"
                        allowfullscreen=""
                        aria-hidden="false"
                        tabindex="0"></iframe>
                </div>
            </div>

            <div class="img-wrapper">
                <Image src={Map} alt="Location map" />
            </div>

            <div class="points-container">
                {
                    lang === "lv" && (
                        <div class="points">
                            <p>1. Mēbeļu salons</p>
                            <p>2. Caurlaides punkts (gājējiem)</p>
                            <p>3. Caurlaides punkts (transportam)</p>
                            <p>4. Mēbeļu noliktava</p>
                            <p>5. Porolona ražošanas cehs</p>
                            <p>6. Audumu noliktava</p>
                        </div>
                    )
                }
                {
                    lang === "ru" && (
                        <div class="points">
                            <p> 1. Салон мебели</p>
                            <p> 2. Пропускной пункт (для пешеходов)</p>
                            <p> 3. Пропускной пункт (для транспорта)</p>
                            <p> 4. Мебельный склад</p>
                            <p> 5. Цех по производству поролона</p>
                            <p> 6. Склад ткани</p>
                        </div>
                    )
                }
                {
                    lang === "en" && (
                        <div class="points">
                            <p> 1. Furniture salon</p>
                            <p> 2. Checkpoint (for pedestrians)</p>
                            <p> 3. Checkpoint (for transport)</p>
                            <p> 4. Furniture warehouse</p>
                            <p> 5. Polyurethane foam production shop</p>
                            <p> 6. Fabric warehouse</p>
                        </div>
                    )
                }
            </div>

            <div class="copyright">
                <a href="/map.png" target="_blank">
                    <h6>
                        <Image src={Union} alt="" />
                        {scheme[lang]}
                    </h6>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        width: 100%;
    }

    /* Contact Links */
    .contact-link {
        color: inherit;
        text-decoration: none;
        cursor: pointer;
        border-bottom: 1px dotted transparent;
        padding-bottom: 1px;
        transition: all 0.3s ease;
    }

    .contact-link:hover {
        opacity: 0.8;
        border-bottom-color: currentColor;
    }

    /* LOCATION STYLES */
    #location {
        background-color: #333333;
        padding: 100px 0;
    }

    .location-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        align-items: start;
    }

    /* Text Area */
    .text-area h3 {
        font-weight: 500;
        font-size: 40px;
        line-height: 45px;
        letter-spacing: 0.02em;
        font-family: "Ubuntu", sans-serif;
        color: #ffffff;
        margin-bottom: 50px;
    }

    .text-area p {
        font-family: "Open Sans", sans-serif;
        font-style: normal;
        font-weight: normal;
        font-size: 18px;
        line-height: 36px;
        letter-spacing: 0.002em;
        color: #ffffff;
        margin: 0;
    }

    .text-area .email {
        margin-bottom: 30px;
    }

    .text-area .loc {
        display: flex;
        align-items: flex-start;
        margin-bottom: 30px;
    }

    .text-area .loc .fa {
        margin-right: 14px;
        flex-shrink: 0;
    }

    .text-area .time {
        margin-left: 40px;
    }

    .text-area .fa {
        margin-right: 20px;
        color: #555;
    }

    /* Map Container */
    .map-container {
        width: 100%;
    }

    .map {
        display: flex;
        justify-content: center;
    }

    .map iframe {
        max-width: 100%;
        width: 500px;
        height: 400px;
    }

    /* Image Wrapper */
    .img-wrapper {
        width: 100%;
        overflow: hidden;
    }

    .img-wrapper img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        display: block;
    }

    /* Points */
    .points-container {
        display: flex;
        align-items: center;
    }

    .points {
        padding: 30px 0;
    }

    .points p {
        color: #ffffff;
        margin: 2px 0;
        font-family: "Open Sans", sans-serif;
        font-size: 18px;
        line-height: 36px;
    }

    /* Copyright */
    .copyright {
        grid-column: 1 / -1;
        margin-top: 30px;
    }

    .copyright a {
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: opacity 0.3s ease;
    }

    .copyright a:hover {
        opacity: 0.8;
    }

    .copyright h6 {
        font-family: "Open Sans", sans-serif;
        font-style: normal;
        font-weight: normal;
        font-size: 18px;
        line-height: 36px;
        letter-spacing: 0.002em;
        color: #ffffff;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .copyright img {
        margin-right: 30px;
    }

    /* Tablet: 770px - 1024px */
    @media only screen and (max-width: 1024px) {
        .location-grid {
            gap: 40px 20px;
        }

        .map iframe {
            width: 100%;
            height: 300px;
        }

        .img-wrapper img {
            height: 300px;
        }
    }

    /* Large Mobile: 480px - 770px */
    @media only screen and (max-width: 770px) {
        #location {
            padding: 50px 0;
        }

        .location-grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .map {
            justify-content: flex-start;
        }

        .text-area h3 {
            font-size: 30px;
            line-height: 45px;
            margin-bottom: 30px;
            text-align: center;
        }

        .text-area .email {
            margin-bottom: 15px;
        }

        .text-area p {
            font-size: 14px;
            line-height: 28px;
        }

        .text-area .loc {
            margin-bottom: 15px;
        }

        .text-area .time {
            margin-left: 20px;
        }

        .map iframe {
            width: 100%;
            height: 250px;
        }

        .img-wrapper img {
            height: 250px;
        }

        .points {
            padding: 0;
        }

        .points p {
            font-size: 14px;
            line-height: 28px;
        }

        .copyright {
            margin-top: 15px;
        }
    }

    /* Small Mobile: 320px - 479px */
    @media only screen and (max-width: 479px) {
        #location {
            padding: 40px 0;
        }

        .container {
            padding: 0 15px;
        }

        .location-grid {
            gap: 20px;
        }

        .text-area h3 {
            font-size: 25px;
            line-height: 32px;
            margin-bottom: 20px;
        }

        .text-area .email {
            margin-bottom: 10px;
        }

        .text-area p {
            font-size: 12px;
            line-height: 23px;
            font-weight: 600;
        }

        .text-area .loc {
            margin-bottom: 10px;
        }

        .text-area .time {
            margin-left: 10px;
        }

        .text-area .fa {
            margin-right: 10px;
            font-size: 14px;
        }

        .map iframe {
            width: 100%;
            height: 200px;
        }

        .img-wrapper img {
            height: 200px;
        }

        .points p {
            font-size: 12px;
            line-height: 24px;
        }

        .copyright {
            display: none;
        }
    }
</style>
