---
import { locationData } from "../data/location";
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Map from "../assets/images/map.png";
import Union from "../assets/images/union.svg";

// Reusable class strings
const textClasses =
    "text-xs sm:text-sm md:text-lg leading-[23px] sm:leading-7 md:leading-9 tracking-[0.002em] m-0 font-semibold sm:font-normal";
const linkClasses =
    "text-white no-underline border-b border-b-transparent pb-px transition-all duration-300 hover:opacity-80 hover:border-b-white";
const iconClasses = "text-[#555] text-sm sm:text-base";
---

<!-- Location -->
<section id="location" class="bg-(--bg-dark) py-10 sm:py-[50px] md:py-[100px]">
    <div class="container max-w-[1200px] mx-auto px-5">
        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-5 sm:gap-[30px] md:gap-[30px]"
        >
            <!-- Text Area -->
            <div class="text-white">
                <h3
                    class="font-medium text-[25px] sm:text-[30px] md:text-[40px] leading-8 sm:leading-[45px] md:leading-[45px] tracking-[0.02em] mb-5 sm:mb-[30px] md:mb-[50px] text-center md:text-left"
                >
                    {locationData.title[lang]}
                </h3>

                <div class="mb-2.5 sm:mb-[15px] md:mb-[30px]">
                    <p class={textClasses}>
                        <i
                            class={`fa fa-envelope mr-2.5 sm:mr-5 ${iconClasses}`}
                        ></i>
                        <a
                            href={`mailto:${locationData.contact.email}`}
                            class={linkClasses}
                        >
                            {locationData.contact.email}
                        </a>
                    </p>
                    <p class={textClasses}>
                        <i class={`fa fa-phone mr-2.5 sm:mr-5 ${iconClasses}`}
                        ></i>
                        <a
                            href={`tel:+371${locationData.contact.phone1}`}
                            class={linkClasses}
                        >
                            {locationData.contact.phone1}
                        </a>,
                        <a
                            href={`tel:+371${locationData.contact.phone2}`}
                            class={linkClasses}
                        >
                            {locationData.contact.phone2}
                        </a>
                    </p>
                </div>

                <div class="flex items-start mb-2.5 sm:mb-[15px] md:mb-[30px]">
                    <i
                        class={`fa fa-map-marker-alt mr-3.5 shrink-0 ${iconClasses}`}
                    ></i>
                    <p class={textClasses}>
                        <a
                            href={`https://maps.google.com/?q=${locationData.contact.address}`}
                            target="_blank"
                            class={linkClasses}
                        >
                            {locationData.contact.address}
                        </a>
                    </p>
                </div>

                <div class="ml-2.5 sm:ml-5 md:ml-10">
                    {
                        ["weekday", "break", "weekend"].map((key) => (
                            <p class={textClasses}>
                                {locationData.workingHours[`${key}_${lang}`]}
                            </p>
                        ))
                    }
                </div>
            </div>

            <!-- Map Container -->
            <div class="w-full flex justify-center md:justify-center">
                <iframe
                    src={locationData.mapUrl}
                    class="w-full max-w-[500px] h-[200px] sm:h-[250px] md:h-[300px] lg:h-[400px] border-0"
                    allowfullscreen=""
                    aria-hidden="false"
                    tabindex="0"></iframe>
            </div>

            <!-- Image Wrapper -->
            <div class="w-full overflow-hidden">
                <Image
                    src={Map}
                    alt="Location map"
                    class="w-full h-[200px] sm:h-[250px] md:h-[300px] lg:h-[400px] object-cover block"
                />
            </div>

            <!-- Points Container -->
            <div class="flex items-center">
                <div class="py-0 sm:py-0 md:py-[30px]">
                    {
                        locationData.mapPoints[lang].map((point) => (
                            <p class="text-white my-0.5 text-xs sm:text-sm md:text-lg leading-6 sm:leading-7 md:leading-9">
                                {point}
                            </p>
                        ))
                    }
                </div>
            </div>

            <!-- Copyright -->
            <div
                class="col-span-1 md:col-span-2 mt-[15px] sm:mt-[15px] md:mt-[30px] hidden sm:block"
            >
                <a
                    href="/map.png"
                    target="_blank"
                    class="no-underline inline-flex items-center transition-opacity duration-300 hover:opacity-80"
                >
                    <Image src={Union} alt="" class="mr-[30px]" />
                    <h6
                        class="text-white text-xs sm:text-sm md:text-lg leading-6 sm:leading-7 md:leading-9 tracking-[0.002em] m-0 flex items-center font-normal"
                    >
                        {locationData.scheme[lang]}
                    </h6>
                </a>
            </div>
        </div>
    </div>
</section>
