---
const { lang } = Astro.props;

import { Image } from "astro:assets";
import Map from "../assets/images/map.png";
import Union from "../assets/images/union.svg";

const scheme = {
    lv: "Ielādēt braukšanas maršrutu",
    ru: "Скачать схему проезда",
    en: "Download the entrance scheme",
};
const title = {
    lv: "Ražotne",
    ru: "Производство",
    en: "Production of the goods",
};
const email = "order@eliza-k.lv";
const phone1 = "27862121";
const phone2 = "26653510";
const address = "Rīga, A. Deglava iela 52A, LV-1035";

const item = {
    weekday_ru: "Пн-Пт 8:30 - 16:00",
    break_ru: "Перерыв 12:00 - 13:00",
    weeken_ru: "Сб, Вскр - закрыто",
    weekday_lv: "Pirmd-Piekt 8:30 - 16:00",
    break_lv: "Pārtraukums 12:00 - 13:00",
    weeken_lv: "Sestd, Svētd - brīvdiena",
    weekday_en: "Mon-Fri 8:30 - 16:00",
    break_en: "Break 12:00 - 13:00",
    weeken_en: "Sat, Sun - closed",
};
---

<!-- Location -->
<section id="location">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="text-area">
                    <h3>{title[lang]}</h3>
                    <div class="email">
                        <p>
                            <i class="fa fa-envelope"></i>
                            <a href={`mailto:${email}`} class="contact-link"
                                >{email}</a
                            >
                        </p>
                        <p>
                            <i class="fa fa-phone"></i>
                            <a href={`tel:+371${phone1}`} class="contact-link"
                                >{phone1}</a
                            >,
                            <a href={`tel:+371${phone2}`} class="contact-link"
                                >{phone2}</a
                            >
                        </p>
                    </div>
                    <div class="loc d-flex">
                        <i class="fa fa-map-marker-alt"></i>
                        <p>
                            <a
                                href={`https://maps.google.com/?q=${address}`}
                                target="_blank"
                                class="contact-link"
                            >
                                {address}
                            </a>
                        </p>
                    </div>
                    <div class="time">
                        <p>{item["weekday_" + lang]}</p>
                        <p>{item["break_" + lang]}</p>
                        <p>{item["weeken_" + lang]}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <div class="map">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d790.9258588960025!2d24.166916021392023!3d56.95046509910395!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46eecf1ae790db37%3A0x341a98d829cf03d0!2sEL%C4%AAZA-K%20porolona%20cehs!5e0!3m2!1sru!2slv!4v1667739898401!5m2!1sru!2slv"
                        width="500"
                        height="400"
                        frameborder="0"
                        style="border:0;"
                        allowfullscreen=""
                        aria-hidden="false"
                        tabindex="0"></iframe>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-wrapper">
                    <Image src={Map} alt="" />
                </div>
            </div>
            <div class="col-md-6">
                {
                    lang === "lv" && (
                        <div class="points">
                            <p>1. Mēbeļu salons</p>
                            <p>2. Caurlaides punkts (gājējiem)</p>
                            <p>3. Caurlaides punkts (transportam)</p>
                            <p>4. Mēbeļu noliktava</p>
                            <p>5. Porolona ražošanas cehs</p>
                            <p>6. Audumu noliktava</p>
                        </div>
                    )
                }
                {
                    lang === "ru" && (
                        <div class="points">
                            <p> 1. Салон мебели</p>
                            <p> 2. Пропускной пункт (для пешеходов)</p>
                            <p> 3. Пропускной пункт (для транспорта)</p>
                            <p> 4. Мебельный склад</p>
                            <p> 5. Цех по производству поролона</p>
                            <p> 6. Склад ткани</p>
                        </div>
                    )
                }
                {
                    lang === "en" && (
                        <div class="points">
                            <p> 1. Furniture salon</p>
                            <p> 2. Checkpoint (for pedestrians)</p>
                            <p> 3. Checkpoint (for transport)</p>
                            <p> 4. Furniture warehouse</p>
                            <p> 5. Polyurethane foam production shop</p>
                            <p> 6. Fabric warehouse</p>
                        </div>
                    )
                }
            </div>
            <div class="col-md-12">
                <div class="copyright">
                    <a href="/map.png" target="_blank">
                        <h6>
                            <Image src={Union} alt="" />
                            {scheme[lang]}
                        </h6>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-link {
        color: inherit;
        text-decoration: none;
        cursor: pointer;
    }

    .contact-link:hover {
        text-decoration: none;
        opacity: 0.8;
    }

    .contact-link {
        border-bottom: 1px dotted transparent;
        padding-bottom: 1px;
    }

    .contact-link:hover {
        border-bottom-color: currentColor;
    }

    /* LOCATION STYLES */
    #location {
        background-color: #333333;
        padding: 100px 0;
    }

    #location .col-md-6 {
        margin: 30px 0;
    }

    #location .text-area h3 {
        font-weight: 500;
        font-size: 40px;
        line-height: 45px;
        letter-spacing: 0.02em;
        font-family: "Ubuntu";
        letter-spacing: 0.02em;
        color: #ffffff;
        margin-bottom: 50px;
    }

    #location .text-area p {
        font-family: Open "Sans";
        font-style: normal;
        font-weight: normal;
        font-size: 18px;
        line-height: 36px;
        letter-spacing: 0.002em;
        color: #ffffff;
        margin: 0px;
    }

    #location .text-area .email {
        margin-bottom: 30px;
    }

    #location .text-area .loc {
        margin-bottom: 30px;
    }

    #location .text-area .loc .fa {
        margin-right: 30px;
    }

    #location .text-area .time {
        margin-left: 40px;
    }

    #location .text-area .warning {
        margin-left: 40px;
        color: #d06d35;
        font-weight: 700;
    }

    #location .text-area .fa {
        margin-right: 20px;
        color: #555;
    }

    #location .img-wrapper img {
        width: 730px;
        height: 400px;
    }

    #location .points {
        padding: 30px 0;
    }

    #location .points p {
        color: #ffffff;
        margin: 2px;
    }

    #location .copyright img {
        margin-right: 30px;
    }

    #location .copyright h6 {
        font-family: Open "Sans";
        font-style: normal;
        font-weight: normal;
        font-size: 18px;
        line-height: 36px;
        letter-spacing: 0.002em;
        color: #ffffff;
        margin: 0px;
    }

    #location .copyright a {
        text-decoration: none;
    }

    /* Large Mobile :480px. */
    @media only screen and (min-width: 480px) and (max-width: 770px) {
        #location {
            padding: 50px 0;
        }
        #location .text-area h3 {
            font-size: 30px;
            line-height: 45px;
            margin-bottom: 30px;
            text-align: center;
        }
        #location .map iframe {
            width: 100% !important;
            height: 150px;
        }
        #location .img-wrapper img {
            width: 100%;
            height: 130px;
        }
        #location .text-area .email {
            margin-bottom: 0;
        }
        #location .text-area p {
            font-size: 12px;
            line-height: 23px;
            font-weight: 600;
            margin: 0 0 7px 0;
        }
        #location .text-area .loc {
            margin-bottom: 7px;
        }
        #location .points {
            padding: 0px 30px;
        }
        #location .points p {
            color: #ffffff;
            margin: 2px;
            font-size: 12px;
        }
    }

    /* Large Mobile :320. */
    @media only screen and (min-width: 320px) and (max-width: 475px) {
        #location {
            padding: 50px 0;
        }
        #location .text-area h3 {
            font-size: 30px;
            line-height: 45px;
            margin-bottom: 30px;
            text-align: center;
        }
        #location .map iframe {
            width: 100% !important;
            height: 150px;
        }
        #location .img-wrapper img {
            width: 100%;
            height: 130px;
        }
        #location .text-area .email {
            margin-bottom: 0;
        }
        #location .text-area p {
            font-size: 12px;
            line-height: 23px;
            font-weight: 600;
            margin: 0 0 7px 0;
        }
        #location .text-area .loc {
            margin-bottom: 7px;
        }
        #location .points {
            padding: 0px 30px;
        }
        #location .points p {
            color: #ffffff;
            margin: 2px;
            font-size: 12px;
        }
        #location .copyright {
            display: none;
        }
        #location .col-md-6 {
            margin: 15px 0;
        }
    }
</style>
